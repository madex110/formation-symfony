{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de board{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-tilte">{{stats.users}} utilisateurs</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.ads}} annonces postées</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.bookings}} réservations</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.comments}} avis</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Les annonces populaires !</h2>

                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td>
                                    <img src="{{ad.picture}}" alt="avatar de {{ad.firstName}} {{ad.lastName}}" class="avatar avatar-mini">
                                    {{ad.firstName}} {{ad.lastName}}
                                </td>
                                <td class="text-center">
                                    <spaan class="badge badge-dark rounded">{{ad.note | number_format('1', ',',' ' )}}</spaan>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les pires annonces !</h2>

                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td>
                                    <img src="{{ad.picture}}" alt="avatar de {{ad.firstName}} {{ad.lastName}}" class="avatar avatar-mini">
                                    {{ad.firstName}} {{ad.lastName}}
                                </td>
                                <td class="text-center">
                                    <spaan class="badge badge-dark rounded">{{ad.note | number_format('1', ',',' ' )}}</spaan>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            
            </div>
        </div>
    </div>
{% endblock %}
